    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run mocha",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mochapack/bin/mochapack",
            "stopOnEntry": false,
            "args": [
                "mochapack \"test/**/*.js\"",
                "--no-timeouts"
            ],
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true,
        }
    ],
}
